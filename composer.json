{
    "name": "eeea/contable-api",
    "description": "API REST para Sistema Contable Escolar EEEA",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.6",
        "firebase/php-jwt": "^6.10",
        "robmorgan/phinx": "^0.16",
        "phpoffice/phpspreadsheet": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "migrate": "phinx migrate -c config/phinx.php",
        "migrate:rollback": "phinx rollback -c config/phinx.php",
        "seed": "phinx seed:run -c config/phinx.php",
        "backup": "php bin/backup.php"
    }
}
